<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.0" xmlns="http://java.sun.com/xml/ns/persistence/orm"
				 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
				 http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">
	<persistence-unit-metadata>
		<persistence-unit-defaults>
			<access>FIELD</access>
		</persistence-unit-defaults>
	</persistence-unit-metadata>
	
	<entity class="ch.vd.demaut.domain.demandes.autorisation.DemandeAutorisation" access="FIELD">
		<table name="DEMANDE_AUTORISATION"/>
		<attributes>
			<id name="id">
			    <generated-value strategy="AUTO"/>
			</id>
			<version name="version">
				<column name="VERSION"/>
			</version>
            <embedded name="listeDesAnnexes"/>
            <embedded name="referenceDeDemande"/>
        </attributes>
	</entity>

	<entity class="ch.vd.demaut.domain.annexes.Annexe" access="FIELD">
		<table name="ANNEXE"/>
		<attributes>
			<id name="id">
				<generated-value strategy="AUTO"/>
			</id>
            <basic name="contenuAnnexe"><lob/></basic>
            <version name="version">
                <column name="VERSION"/>
            </version>
            <embedded name="annexeMetadata"/>
        </attributes>
	</entity>

	<embeddable class="ch.vd.demaut.domain.annexes.NomFichier" access="FIELD">
		<attributes>
			<basic name="nomFichier"/>
		</attributes>
	</embeddable>

	<embeddable class="ch.vd.demaut.domain.annexes.AnnexeMetadata" access="FIELD">
		<attributes>
			<basic name="tailleContenu"/>
			<basic name="typeAnnexe"/>
			<embedded name="nomFichier"/>
		</attributes>
	</embeddable>

    <embeddable class="ch.vd.demaut.domain.annexes.ListeDesAnnexes" access="FIELD">
        <attributes>
            <one-to-many name="annexes" fetch="EAGER">
                <order-by/>
                <join-column name="DEMANDE_ID"/>
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>
        </attributes>
    </embeddable>

    <embeddable class="ch.vd.demaut.domain.demandes.ReferenceDeDemande" access="FIELD">
        <attributes>
            <basic name="reference"/>
        </attributes>
    </embeddable>
	
</entity-mappings>
