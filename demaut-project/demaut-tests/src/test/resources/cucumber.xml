<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="demandeurRepo"
          class="ch.vd.demaut.domain.demandeurs.DemandeurRepositoryMock" scope="cucumber-glue">
    </bean>

    <bean id="demandeAutorisationRepo"
          class="ch.vd.demaut.domain.demandes.autorisation.DemandeAutorisationRepositoryMock" scope="cucumber-glue">
    </bean>

    <bean class="ch.vd.demaut.cucumber.steps.definitions.AttacherAnnexeStepDefinitions" scope="cucumber-glue">
        <property name="demandeurRepository" ref="demandeurRepo"/>
        <property name="demandeAutorisationRepository" ref="demandeAutorisationRepo"/>
    </bean>

</beans>