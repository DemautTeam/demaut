<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- TODO : Use profiles like this -->

	<!-- Demandeur -->

	<bean id="demandeurRepository"
		class="ch.vd.demaut.services.demandeurs.repo.mock.DemandeurRepositoryMock"
		scope="cucumber-glue">
	</bean>

	<!-- DemandeAutorisation -->

	<bean id="demandeAutorisationRepository"
		class="ch.vd.demaut.data.demandes.autorisation.repo.DemandeAutorisationRepositoryImpl"
		scope="cucumber-glue">
	</bean>

	<bean id="demandeAutorisationSteps" class="ch.vd.demaut.cucumber.steps.DemandeAutorisationSteps"
		scope="cucumber-glue">
		<property name="demandeurRepository" ref="demandeurRepository" />
		<property name="demandeAutorisationRepository" ref="demandeAutorisationRepository" />
	</bean>

	<bean
		class="ch.vd.demaut.cucumber.steps.definitions.CreationDemandeStepDefinitions"
		scope="cucumber-glue">
		<property name="demandeAutorisationSteps" ref="demandeAutorisationSteps" />
	</bean>

	<!-- Annexe -->

	<bean
		class="ch.vd.demaut.cucumber.steps.definitions.AttacherAnnexeStepDefinitions"
		scope="cucumber-glue">
		<property name="demandeAutorisationSteps" ref="demandeAutorisationSteps" />
	</bean>

	<bean id="props"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:demaut-dataTest.cfg</value>
			</list>
		</property>
	</bean>

	<import resource="classpath:META-INF/spring/jpa-context.xml" />

</beans>