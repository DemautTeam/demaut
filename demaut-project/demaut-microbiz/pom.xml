                            <goal>single</goal>
                        </goals>
                        <phase>verify</phase>
                        <configuration>
                            <descriptors>
                                <descriptor>assembly/assembly.xml</descriptor>
                            </descriptors>
                            <appendAssemblyId>false</appendAssemblyId>
                            <finalName>${artifactId}-${project.version}</finalName>
