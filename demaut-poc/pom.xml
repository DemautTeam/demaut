    <build>

        <pluginManagement>

            <plugins>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${maven.compiler.plugin.version}</version>
                    <configuration>
                        <source>${java.version}</source>
                        <target>${java.version}</target>
                        <encoding>${project.build.sourceEncoding}</encoding>
                        <compilerArgument>-Aopenjpa.metamodel=true</compilerArgument>
                        <compilerArgument>-Xlint:all</compilerArgument>
                        <showWarnings>true</showWarnings>
                        <showDeprecation>true</showDeprecation>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>${maven.resources.plugin.version}</version>
                    <configuration>
                        <encoding>${project.build.sourceEncoding}</encoding>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <version>${maven.exec.plugin.version}</version>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>${maven.surefire.plugin.version}</version>
                    <configuration>
                        <testFailureIgnore>false</testFailureIgnore>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>${maven.war.plugin.version}</version>
                    <configuration>
                        <webResources>
                            <resource>
                                <filtering>true</filtering>
                                <directory>src/main/webapp</directory>
                                <includes>
                                    <include>**/web.xml</include>
                                    <!-- include any other file types you want to filter -->
                                </includes>
                            </resource>
                        </webResources>
                        <archive>
                            <manifestEntries>
                                <version>${project.version}</version>
                            </manifestEntries>
                        </archive>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>${maven.jar.plugin.version}</version>
                    <executions>
                        <execution>
                            <id>test</id>
                            <goals>
                                <goal>test-jar</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>${maven.dependency.plugin.version}</version>
                    <executions>
                        <execution>
                            <id>copy-dependencies</id>
                            <phase>prepare-package</phase>
                            <goals>
                                <goal>copy-dependencies</goal>
                            </goals>
                            <configuration>
                                <outputDirectory>${project.build.directory}/lib</outputDirectory>
                                <overWriteReleases>false</overWriteReleases>
                                <overWriteSnapshots>false</overWriteSnapshots>
                                <overWriteIfNewer>true</overWriteIfNewer>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>${maven.assembly.plugin.version}</version>
                    <configuration>
                        <descriptors>
                            <descriptor>src/main/assembly/assembly.xml</descriptor>
                        </descriptors>
                    </configuration>
                </plugin>

                <plugin>
                     <!--Enhancement des classe entity Ã  la compilation pour OpenJPA-->
                    <groupId>org.apache.openjpa</groupId>
                    <artifactId>openjpa-maven-plugin</artifactId>
                    <version>${maven.openjpa.plugin.version}</version>
                    <configuration>
                        <includes>${demaut.openjpa.includes.mask}</includes>
                        <addDefaultConstructor>true</addDefaultConstructor>
                        <enforcePropertyRestrictions>true</enforcePropertyRestrictions>
                    </configuration>
                    <executions>
                        <execution>
                            <id>enhancer</id>
                            <phase>process-classes</phase>
                            <goals>
                                <goal>enhance</goal>
                            </goals>
                        </execution>
                    </executions>
                    <dependencies>
                        <dependency>
                            <groupId>org.apache.openjpa</groupId>
                            <artifactId>openjpa</artifactId>
                            <version>${openjpa.version}</version>
                        </dependency>
                    </dependencies>
                </plugin>

                <!-- see plugin doc : http://felix.apache.org/site/apache-felix-maven-bundle-plugin-bnd.html -->
                <plugin>
                    <groupId>org.apache.felix</groupId>
                    <artifactId>maven-bundle-plugin</artifactId>
                    <version>${maven.bundle.plugin.version}</version>
                    <extensions>true</extensions>
                    <configuration>
                        <instructions>
                            <Bundle-SymbolicName>ch.vd.pee.microbiz.${project.artifactId}</Bundle-SymbolicName>
                            <Bundle-Version>${project.version}</Bundle-Version>
                            <Import-Package>javax.jms,*</Import-Package>
                            <Private-Package>ch.vd.esb.progres.ciad</Private-Package>
                            <Distributable>false</Distributable>
                            <Include-Resource>target/classes</Include-Resource>
                        </instructions>
                    </configuration>
                    <executions>
                        <execution>
                            <id>wrap-my-dependency</id>
                            <goals>
                                <goal>wrap</goal>
                            </goals>
                            <configuration>
                                <wrapImportPackage>;</wrapImportPackage>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>

                <plugin>
                    <groupId>cei.aew.web</groupId>
                    <artifactId>cei-maven-plugin</artifactId>
                    <version>${maven.cei.web.plugin.version}</version>
                    <configuration>
                        <webresourceurl>http://exploitation.etat-de-vaud.ch/outils/web/ws/rest</webresourceurl>
                        <filetoupload>${project.build.directory}/${project.build.finalName}-bin.zip</filetoupload>
                        <from>xsicrz</from>
                        <to>WEB</to>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>${maven.release.plugin.version}</version>
                    <configuration>
                        <goals>clean install assembly:single cei:upload</goals>
                    </configuration>
                </plugin>

                <!-- CI-DESSOUS : PLUGINS OUR MIGNIFIER LES RESSOURCES DU PROJET -->
                <plugin>
                    <groupId>com.samaxes.maven</groupId>
                    <artifactId>minify-maven-plugin</artifactId>
                    <version>${maven.minify.plugin.version}</version>
                    <executions>
                        <execution>
                            <id>default-minify</id>
                            <phase>process-resources</phase>
                            <configuration>
                                <webappTargetDir>target/classes/www</webappTargetDir>
                                <webappSourceDir>${basedir}/src/main/resources/www</webappSourceDir>
                                <cssSourceDir>css</cssSourceDir>
                                <cssSourceFiles>
                                    <cssSourceFile>bootstrap.css</cssSourceFile>
                                    <cssSourceFile>bootstrap-usabilis.css</cssSourceFile>
                                </cssSourceFiles>
                                <jsSourceDir>js</jsSourceDir>
                                <jsSourceFiles>
                                    <jsSourceFile>jquery-1.11.1.js</jsSourceFile>
                                    <jsSourceFile>bootstrap.js</jsSourceFile>
                                    <jsSourceFile>angular.js</jsSourceFile>
                                    <jsSourceFile>angular-sanitize.js</jsSourceFile>
                                    <jsSourceFile>app.js</jsSourceFile>
                                </jsSourceFiles>
                                <jsTargetDir>js</jsTargetDir>
                                <jsFinalFile>all.js</jsFinalFile>
                                <cssTargetDir>css</cssTargetDir>
                                <cssFinalFile>all.css</cssFinalFile>
                                <yuiLineBreak>4000</yuiLineBreak>
                                <closureLanguage>ECMASCRIPT5</closureLanguage>
                                <jsEngine>CLOSURE</jsEngine>
                            </configuration>
                            <goals>
                                <goal>minify</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>

                <plugin>
                    <groupId>com.google.code.maven-replacer-plugin</groupId>
                    <artifactId>replacer</artifactId>
                    <version>${maven.google.replacer.version}</version>
                    <executions>
                        <execution>
                            <phase>process-resources</phase>
                            <goals>
                                <goal>replace</goal>
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <includes>
                            <include>${basedir}/target/classes/www/*.html</include>
                            <include>${basedir}/target/classes/www/js/all.js</include>
                            <include>${basedir}/target/classes/www/js/all.min.js</include>
                        </includes>
                        <replacements>
                            <replacement>
                                <token><![CDATA[<link href="css/bootstrap.css" rel="stylesheet" type="text/css">]]></token>
                                <value><![CDATA[<link href="css/all.min.css" rel="stylesheet" type="text/css">]]></value>
                            </replacement>

                            <replacement>
                                <token><![CDATA[<link href="css/bootstrap-usabilis.css" rel="stylesheet" type="text/css">]]></token>
                                <value></value>
                            </replacement>

                            <replacement>
                                <token><![CDATA[<script type="text/javascript" language="Javascript" src="js/jquery-1.11.1.js"></script>]]></token>
                            </replacement>

                            <replacement>
                                <token><![CDATA[<script type="text/javascript" language="Javascript" src="js/bootstrap.js"></script>]]></token>
                            </replacement>

                            <replacement>
                                <token><![CDATA[<script type="text/javascript" language="JavaScript" src="js/angular.js"></script>]]></token>
                            </replacement>

                            <replacement>
                                <token><![CDATA[<script type="text/javascript" language="JavaScript" src="js/angular-sanitize.js"></script>]]></token>
                            </replacement>

                            <replacement>
                                <token><![CDATA[<script type="text/javascript" language="JavaScript" src="js/app.js"></script>]]></token>
                                <value><![CDATA[<script type="text/javascript" language="JavaScript" src="js/all.min.js"></script>]]></value>
                            </replacement>

                            <replacement>
                                <token><![CDATA[var microbizAppVersion="dev";]]></token>
                                <value>var microbizAppVersion = "${project.version}";</value>
                            </replacement>

                        </replacements>
                    </configuration>
                </plugin>

            </plugins>

        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>test</id>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/lib</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>false</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>


    </build>
