<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="demaut-data" transaction-type="RESOURCE_LOCAL">

        <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>

        <class>ch.vd.demaut.poc.jpa.entity.Annexe</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="openjpa.jdbc.SynchronizeMappings"
                      value="buildSchema(SchemaAction='add,deleteTableContents')"/>
            <property name="openjpa.Log"
                      value="DefaultLevel=INFO, Runtime=INFO, Tool=INFO, SQL=INFO"/>
            <!--<property name="openjpa.jdbc.DBDictionary"-->
                      <!--value="h2(useSchemaName=false)"/>-->
            <property name="openjpa.RuntimeUnenhancedClasses"
                      value="supported"/>
        </properties>

    </persistence-unit>
</persistence>
        
